$cdd-dark-green = #3e8e64
$cdd-light-green = #00cc8d

*
  box-sizing border-box
  padding 0
  margin 0

body
  font-family "open sans", helvetica, arial, sans-serif
  -webkit-font-smoothing antialiased
  background #000
  color #ccc
  padding 30px 0

.container
  max-width 1200px
  margin 0 auto

.clearfix
  &:before
  &:after
    content ""
    display table
  &:after
    clear both
.logo
  text-align right
  img
    max-width 380px
    heigh auto

.col-50
  float left
  width 50%
  padding 0 10px

.main-informations
  text-align center
  h2
    color white
    font-size 32px
    font-weight 300
    margin-bottom 20px
    span
      display block
      font-weight 700
      line-height 1.2
      font-size 16px
  p
    color #ccc
    font-size 14px
  h3
    margin-top 20px
    color $cdd-light-green
    font-weight 700
    line-height 1.2
    font-size 16px
  h4
    margin-bottom 20px
    color $cdd-light-green
    font-weight 300
    line-height 1.2
    font-size 14px
.social-networks
  text-align center
  li
    display inline-block
    margin 0 10px
.mosaic
  margin-top 30px
  .mosaic-img
    float left
    width calc(100%/7)
    height 192px
    background url(../img/placeholder.jpeg)
    background-size cover
  .transparent
    background transparent
