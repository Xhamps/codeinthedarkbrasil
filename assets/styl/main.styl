$cdd-dark-green = #3e8e64
$cdd-light-green = #00cc8d

*
  box-sizing border-box
  padding 0
  margin 0

body
  font-family "open sans", helvetica, arial, sans-serif
  -webkit-font-smoothing antialiased
  background #000
  color #ccc
  padding 80px 0
  
.body-bg
  background url(../img/header-bg.png)
  background-position center top
  
.container
  max-width 1200px
  margin 0 auto

.clearfix
  &:before
  &:after
    content ""
    display table
  &:after
    clear both
.logo
  text-align center
  img
    max-width 383px
    heigh auto

.col-50
  float left
  width 50%
  padding 0 10px

.main-informations
  text-align center
.header-title
  color white
  font-size 44px
  font-weight 300
  margin-bottom 10px
  span
    display block
    font-weight 700
    line-height 1.2
    font-size 23px
    letter-spacing 3px
.header-address
  color #fff
  font-size 16px
.header-inscription
  margin 30px 0
  color $cdd-light-green
  font-weight 700
  line-height 1.2
  font-size 20px
  span
    display block
    color $cdd-light-green
    font-weight 300
    line-height 1.2
    font-size 16px
      
.social-networks-label
  font-size 16px
  color #fff
  position relative
  margin-bottom 10px
  display inline-block
  &:before
  &:after
    content ''
    position absolute
    height 1px
    width 25px
    top 0
    bottom 0
    margin auto
    background #fff
  &:before
    left -30px
  &:after
    right -30px
.social-networks
  text-align center
  margin-bottom 30px
  li
    display inline-block
    margin 0 10px
.partner-label
  font-weight 300
  font-size 16px
  color white
  display block
  margin-top 10px
  margin-bottom 5px
.mosaic
  margin-top 30px
  .mosaic-img
    float left
    width calc(100%/7)
    height 192px
    background url(../img/placeholder.jpeg)
    background-size cover
  .transparent
    background transparent
